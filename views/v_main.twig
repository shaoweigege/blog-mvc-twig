<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link rel="canonical" href="{{ canonical }}">
    <link href="{{ constant('ROOT') }}assets/css/styles.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="{{ constant('ROOT') }}assets/css/bootstrap.min.css">
    <title>{{ title_main }}</title>
</head>
<body>
<div id="wrapper">
    <header class="site-header">
        <div class="container">
            <div class="row">
                <div class="logo">My Blog</div>
                <div class="phone">8 800 800 80 80</div>
            </div>

        </div>
    </header>
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <div class="container">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item"><a class="nav-link" href="{{ constant('ROOT') }}">Home</a></li>
                <li class="nav-item flex-grow-1"><a class="nav-link" href="{{ constant('ROOT') }}contacts">Contacts</a></li>

                {% if( user ) %}
                    <li class="nav-item "><a class="nav-link" href="{{ constant('ROOT') }}post/add">Add Post</a></li>
                    <li class="nav-item "><a class="nav-link" href="{{ constant('ROOT') }}category/add">Add Category</a></li>
                    <li class="nav-item "><a class="nav-link" href="{{ constant('ROOT') }}category/list">Categories List</a></li>
                    <li class="nav-item "><a class="nav-link" href="{{ constant('ROOT') }}exit">Log out ({{ user.name }})</a></li>

                {% else %}
                    <li class="nav-item "><a class="nav-link" href="{{ constant('ROOT') }}login">Login</a></li>
                {% endif %}
            </ul>
        </div>
    </nav>

    <div class="site-content">
        <div class="container">
            {% block main %}
            <main>
                <h1>{{ h1 }}</h1>
                {{ content }}
            </main>
            {% endblock %}
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <span class="copy">&copy; 2020, All rights reserved</span>
        </div>
    </footer>
</div>
<script src="{{ constant('ROOT') }}assets/js/jquery-1.11.0.min.js" type="text/javascript"></script>
<script src="{{ constant('ROOT') }}assets/js/scripts.js" type="text/javascript"></script>
</body>
</html>
